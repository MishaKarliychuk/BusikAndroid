<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/ll_back"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:textSize="14sp"
            android:textColor="#696969"
            android:layout_marginLeft="7dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Авторизація"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#D9000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/rl_as_p"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_as_passanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Як пасажир"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_width="53dp"
                android:layout_below="@+id/tv_as_passanger"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:visibility="visible"
                android:layout_height="1dp"
                android:id="@+id/vv_p"
                android:background="#000"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/rl_as_d"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_as_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Як перевізник"
                android:textColor="#80000000"
                android:textSize="14sp" />

            <View
                android:layout_width="53dp"
                android:layout_height="1dp"
                android:id="@+id/vv_d"
                android:layout_below="@+id/tv_as_driver"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:background="#000" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_et_fill"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_autoFormatNumber="false"
                app:ccp_defaultLanguage="RUSSIAN"
                app:ccp_textSize="14sp"
                app:ccp_defaultNameCode="UA"
                app:ccp_countryPreference="ua,pl"
                />

            <EditText
                android:id="@+id/et_phone_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000"
                android:background="@null"
                android:maxLength="9"
                android:textSize="14sp"
                android:textColor="#000"
                android:hint="Телефон"
                android:inputType="phone"
                android:singleLine="true" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="14sp"
            android:id="@+id/et_pass_login"
            android:inputType="textPassword"
            android:hint="Пароль"
            android:textColorHint="#000"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_et_fill"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:visibility="gone"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:text="@string/forgot_pass"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_btn_reg_log"
            android:text="Увійти"
            android:textColor="#000"
            android:id="@+id/btn_login"
            android:layout_marginBottom="21sp"
            android:textSize="14sp" />

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn_reg_log"
                    android:text="G"
                    android:textColor="#000"
                    android:textSize="14sp">

                </androidx.appcompat.widget.AppCompatButton>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fb_login"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_btn_reg_log"
                    android:text="F"
                    android:textColor="#000"
                    android:textSize="14sp">


                </androidx.appcompat.widget.AppCompatButton>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn_reg_log"
                android:id="@+id/btn_create_acc"
                android:text="Створити новий обліковий запис"
                android:textColor="#000"
                android:layout_marginBottom="21sp"
                android:textSize="14sp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>