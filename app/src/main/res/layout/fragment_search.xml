<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Passanger.Fragments.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_main_search"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пошук"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#dcdcdc"
            app:cardCornerRadius="9dp"
            android:id="@+id/cv_from_city"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Звідки"
                android:textColor="#000"
                android:textSize="14sp"
                android:id="@+id/tv_from"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#dcdcdc"
            app:cardCornerRadius="9dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/cv_to_city"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Куди"
                android:id="@+id/tv_to"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#dcdcdc"
            app:cardCornerRadius="9dp"
            android:id="@+id/cv_date"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сегодня"
                android:textColor="#000"
                android:textSize="14sp"
                android:id="@+id/tv_date"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>



        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ціна за пасажира"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="115dp"
                android:background="@drawable/bg_et_fill"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="number"
                android:hint="Від"
                android:textColor="#000"
                android:textColorHint="#000"
                />

            <EditText
                android:layout_width="115dp"
                android:background="@drawable/bg_et_fill"
                android:layout_height="40dp"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:hint="До"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:textColorHint="#000"
                />



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ціна за 1 кг груза"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="115dp"
                android:background="@drawable/bg_et_fill"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="number"
                android:hint="Від"
                android:textColor="#000"
                android:textColorHint="#000"
                />

            <EditText
                android:layout_width="115dp"
                android:background="@drawable/bg_et_fill"
                android:layout_height="40dp"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:hint="До"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:textColorHint="#000"
                />



        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:id="@+id/btn_search"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Шукати"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/bg_btn_reg_log"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/ll_choose_city"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Звідки"
                android:id="@+id/tv_direction"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#dcdcdc"
            android:id="@+id/cv_country"
            app:cardCornerRadius="9dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Виберіть країну"
                android:textColor="#000"
                android:id="@+id/tv_country"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#dcdcdc"
            app:cardCornerRadius="9dp"
            android:id="@+id/cv_city"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Населений пункт"
                android:id="@+id/tv_city"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>



        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Далі"
            android:id="@+id/btn_con_city"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/bg_btn_reg_log"/>




    </LinearLayout>

</LinearLayout>