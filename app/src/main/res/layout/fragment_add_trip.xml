<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Driver.Fragments.AddTripFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/ll_main"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_back"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="До всіх рейсів"
                    android:textSize="14sp"
                    android:textColor="#696969"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Додавання рейсу"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:id="@+id/cv_from_city"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Звідки"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:id="@+id/tv_from"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/cv_to_city"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Куди"
                    android:id="@+id/tv_to"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:id="@+id/cv_date"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дата виїзду"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:id="@+id/tv_date"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:id="@+id/cv_time_depart"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Час виїзду"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:id="@+id/tv_time_depart"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:id="@+id/cv_date_arrive"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дата приїзду"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:id="@+id/tv_date_arrive"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:id="@+id/cv_time_arrive"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Час приїзду"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:id="@+id/tv_time_arrive"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:hint="Опис"
                    android:id="@+id/et_description"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Приймаю людей"
                android:textSize="14sp"
                android:id="@+id/cb_people"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:hint="Ціна за пассажира, €"
                    android:id="@+id/et_price_person"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:hint="Мак к-сть"
                    android:id="@+id/et_max_person"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Приймаю вантаж"
                android:textSize="14sp"
                android:textColor="#000"
                android:id="@+id/cb_laggage"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:hint="Ціна за кг, €"
                    android:id="@+id/et_price_laggage"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:hint="Мак к-сть"
                    android:id="@+id/et_max_laggage"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:id="@+id/btn_create"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Створити"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/bg_btn_reg_log"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/ll_choose_city"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_b2"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Звідки"
                    android:id="@+id/tv_direction"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                android:id="@+id/cv_country"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Виберіть країну"
                    android:textColor="#000"
                    android:id="@+id/tv_country"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#dcdcdc"
                app:cardCornerRadius="9dp"
                android:id="@+id/cv_city"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Населений пункт"
                    android:id="@+id/tv_city"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>



            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Далі"
                android:id="@+id/btn_con_city"
                android:layout_marginHorizontal="25dp"
                android:background="@drawable/bg_btn_reg_log"/>




        </LinearLayout>




    </LinearLayout>


</ScrollView>